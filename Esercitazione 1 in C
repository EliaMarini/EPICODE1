/*Programma per calcolare l'area di un quadrato, di un cerchio e di un triangolo
*equilatero dato in ingresso un numero reale */
#include <stdio.h>

int main() {
float d;
float area_quadrato;
float area_triangolo;
float area_cerchio;
float raggio;

printf ("Inserisci il numero D:\n");
scanf ("%f", &d);

area_quadrato=d*d;
raggio=d/2;
area_cerchio=3.14*raggio*raggio;
area_triangolo=d*d*0.433;

printf("L'area del quadrato è:%f ", area_quadrato);
printf("\nL'area del cerchio è:%f ", area_cerchio);
printf("\nL'area del triangolo è:%f ", area_triangolo);

return 0;
}
